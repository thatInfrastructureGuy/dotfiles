# This is the configuration file for Ghostty.
#
# Run `ghostty +show-config --default --docs` to view defaults
# Ghostty's website, at https://ghostty.org/docs/config.

# keybindings
keybind = command+w=unbind
keybind = control+d=unbind
keybind = command+f=toggle_fullscreen

# app config
fullscreen                    = true
window-decoration             = auto
quit-after-last-window-closed = true

# theme
# ghostty +list-themes
window-theme = dark
theme        = Builtin Pastel Dark

# font config
font-family              = Jetbrains Mono
font-size                = 16
window-inherit-font-size = true

# cursor
# needed for vim/term text to show under cursor.
cursor-opacity = 0.5

# remove padding
window-padding-y = 0
window-padding-x = 0
window-padding-color = extend
window-padding-balance = true
